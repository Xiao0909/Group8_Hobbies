@model AnimationModel

@{
    string title = ViewBag.Action + "Movie";
    ViewBag.Title = title;
}

<div class="text-center">
    <h1 class="display-4">Group 8 --Hobbies</h1>
    <h2>@ViewBag.Title</h2>

    <form asp-action="Edit" method="Post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="PublishYear">Publish Year</label>
            <input asp-for="PublishYear" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="WatchingYear">Watching Year</label>
            <input asp-for="WatchingYear" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Rate">Rate</label>
            <input asp-for="Rate" class="form-control" />
        </div>


        <button type="submit" class="btn btn-primary">@ViewBag.Action</button> 
        <a asp-controller="AnimationController" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
